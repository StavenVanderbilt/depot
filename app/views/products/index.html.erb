<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th width="50%" align="left">Title and Description</th>
      <th width="20%" align="left">Price</th>
      <th colspan="3">Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        
        <td class="list_description" width="50%">
          <dl>
            <dt><strong><%= product.title %></strong></dt>
            <dt><%=h truncate(strip_tags(product.description),:length => 80) %></dt>
          </dl>
        </td>

        <td class="list_price" width="20%">
          <%= product.price %>
        </td>

        <td class="list_actions">
          <%= link_to 'Show', product %>
        </td>

        <td class="list_actions">
          <%= link_to 'Edit', edit_product_path(product) %>
        </td>

        <td class="list_actions">
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

