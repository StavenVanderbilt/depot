<div id="product_list">

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th width="200px" align="left">Picture</th>
      <th width="300px" align="left">Title and Description</th>
      <th width="100px" align="left">Price</th>
      <th colspan="3" width="100px">Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>" width="20%">
        
        <td>
          <%= image_tag(product.image_url, :class => 'list_image') %>
        </td>

        <td class="list_description" width="20%">
          <dl>
            <dt><strong><%= product.title %></strong></dt>
            <dd><%=h truncate(strip_tags(product.description),:length => 80) %></dd>
          </dl>
        </td>

        <td class="list_price" width="10%">
          <strong><%= product.price %><strong>
        </td>

        <td class="list_actions" width="5%" >
          <strong><%= link_to 'Show', product %><strong>
        </td>

        <td class="list_actions" width="5%">
          <strong><%= link_to 'Edit', edit_product_path(product) %><strong>
        </td>

        <td class="list_actions" width="5%" >
          <strong><%= link_to 'Destroy', product, :method => :delete, data: { confirm: 'Are you sure?' } %><strong>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

